---
interface Props {
    text: string;
    web: string | null;
}

const { text, web } = Astro.props;
---

<a
    href={web}
    class="backdrop-filter backdrop-blur-md py-3 px-4 text-white cursor-pointer bg-violet-900/20 rounded-md flex gap-2 justify-center transition-all duration-300 hover:bg-violet-800/70"
>
    {text}
    <slot />
</a>
